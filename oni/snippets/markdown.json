{
    "Presentation": {
        "prefix": "presentation",
        "body": [
            "name: section",
            "layout: true",
            "class: center, middle, inverse",
            "",
            "---",
            "",
            "template: section",
            "",
            "# ${1:presentation_title}",
            "",
            "## ${2:presentation_subtitle}",
            "",
            "by Ryan Cross",
            "@CrossR",
            "",
            "${3:link}",
            "",
            "???",
            "Outline",
            "",
            "${4:outline}"
        ],
        "description": "Start of a presentation in remark.js."
    },
    "Centered_Slide": {
        "prefix": "c_slide",
        "body": [
            "",
            "---",
            "",
            "class: center, middle",
            "layout: false",
            "",
            "# ${1:slide_title}",
            "",
            "![](${2:image_path})",
            ""
        ],
        "description": "A centered slide in the middle of the page. Useful for single images."
    },
    "Slide": {
        "prefix": "slide",
        "body": ["", "---", "", "layout: false", "", "## ${1:slide_title}", ""],
        "description": "A normal slide. Useful for lists and text."
    },
    "Reveal": {
        "prefix": "reveal",
        "body": ["", "--", ""],
        "description": "Used to reveal stuff on the current slide, ie item by item for a list."
    },
    "Inline_Math": {
        "prefix": "math",
        "body": ["$${1:math}$"],
        "description": "In-line math."
    },
    "Equation": {
        "prefix": "equation",
        "body": ["", "$$${1:math}$$", ""],
        "description": "An equation, split on-to a new line and centered."
    }
}
