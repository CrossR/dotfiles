# Open terminal
cmd - return : /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~

# Open Firefox
cmd + shift - return : ~/.config/chunkwm/startBrowser.sh
cmd + ctrl - return : ~/.config/chunkwm/startBrowser.sh -p

# Close focused window
alt - w : chunkc tiling::window --close

# Toggle chunkwm
ctrl + cmd - c : ~/.config/chunkwm/toggleChunkwm.sh

# Focus window
cmd - h : chunkc tiling::window --focus west
cmd - j : chunkc tiling::window --focus south
cmd - k : chunkc tiling::window --focus north
cmd - l : chunkc tiling::window --focus east

# Equalize size of windows
shift + alt - 0 : chunkc tiling::desktop --equalize

# Move window
shift + cmd - h : chunkc tiling::window --warp west
shift + cmd - j : chunkc tiling::window --warp south
shift + cmd - k : chunkc tiling::window --warp north
shift + cmd - l : chunkc tiling::window --warp east

# Make floating window fill screen/(left/right) half of screen
shift + cmd - up     : chunkc tiling::window --grid-layout 1:1:0:0:1:1
shift + cmd - left   : chunkc tiling::window --grid-layout 1:2:0:0:1:1
shift + cmd - right  : chunkc tiling::window --grid-layout 1:2:1:0:1:1

# Increase pane size
shift + alt - a : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge west
shift + alt - s : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge south
shift + alt - w : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge north
shift + alt - d : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge east

# Decrease pane size
shift + cmd - a : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge west
shift + cmd - s : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge south
shift + cmd - w : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge north
shift + cmd - d : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge east

# Toggle desktop offset
alt - a : chunkc tiling::desktop --toggle offset

# Toggle window fullscreen
alt - f : chunkc tiling::window --toggle fullscreen

# Toggle window native fullscreen
shift + ctrl - f : chunkc tiling::window --toggle native-fullscreen

# Toggle window parent zoom
alt - d : chunkc tiling::window --toggle parent

# Toggle window split type
alt - e : chunkc tiling::window --toggle split

# Toggle window fade
alt - q : chunkc tiling::window --toggle fade

# Float / unfloat window and center on screen
alt - t : chunkc tiling::window --toggle float;\
          chunkc tiling::window --grid-layout 4:4:1:1:2:2

# Toggle sticky
alt - s : chunkc tiling::window --toggle sticky

# Toggle sticky, float and resize to picture-in-picture size
alt - p : chunkc tiling::window --toggle sticky;\
          chunkc tiling::window --grid-layout 5:5:4:0:1:1

# Change layout of desktop
ctrl + cmd - a : chunkc tiling::desktop --layout bsp
ctrl + cmd - s : chunkc tiling::desktop --layout monocle
ctrl + cmd - d : chunkc tiling::desktop --layout float

